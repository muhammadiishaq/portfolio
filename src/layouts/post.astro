---
import Layout from "./main.astro";
import CursorHighlighter from "../components/CursorHighlighter.astro";
import ReadingProgressBar from "../components/ReadingProgressBar.astro";
const { frontmatter } = Astro.props;
---

<Layout>
  <ReadingProgressBar />
  <div class="min-h-screen">
    <article class="mx-auto px-4 sm:px-6 lg:px-8 max-w-5xl">
      <header class="pt-16 lg:pt-24">
        <div class="space-y-4 text-center">
          <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold tracking-tighter">
            {frontmatter.title}
          </h1>
          <div class="text-neutral-400 flex items-center justify-center gap-x-2">
            <time datetime={frontmatter.date}>{frontmatter.dateFormatted}</time>
            <span>&bull;</span>
            <span>{frontmatter.readingTime} min read</span>
            {frontmatter.author && (
              <>
                <span>&bull;</span>
                <span>{frontmatter.author}</span>
              </>
            )}
          </div>
        </div>
      </header>
      <div class="mt-8 lg:mt-12 prose prose-invert prose-neutral mx-auto lg:prose-lg max-w-none lg:max-w-[75ch] prose-a:text-blue-400 hover:prose-a:text-blue-300 prose-img:rounded-xl">
        <slot />
      </div>
    </article>
  </div>
  <CursorHighlighter />
</Layout>

<style>
  /* Additional styles for code blocks and other elements */
  :global(pre) {
    padding: 1.5rem;
    border-radius: 0.5rem;
    background-color: rgb(17, 17, 17) !important;
  }
  
  :global(.prose img) {
    margin: 2rem auto;
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
  }
</style>
